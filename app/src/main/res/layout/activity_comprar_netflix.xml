<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:padding="24dp">

    <ImageButton
        android:id="@+id/botonAtras"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:backgroundTint="#DDDDDD"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_media_previous"
        android:contentDescription="AtrÃ¡s"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/saldoTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo: 75.0 Bs"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:background="#EEEEEE"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textoComprar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comprar"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/saldoTexto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/servicioTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Netflix"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/textoComprar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/montoTexto"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="35.4 Bs"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#DDDDDD"
        android:layout_marginTop="48dp"
        android:backgroundTint="#E0E0E0"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/servicioTexto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/botonComprar"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:text="Comprar"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="#B22222"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/montoTexto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
